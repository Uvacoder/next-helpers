{
  "name": "@next-helpers/safe-request-zod",
  "version": "0.1.0",
  "license": "MIT",
  "homepage": "https://github.com/belgattitude/next-helpers",
  "repository": {
    "type": "git",
    "url": "https://github.com/belgattitude/next-helpers",
    "directory": "packages/safe-request-zod"
  },
  "author": {
    "name": "Vanvelthem SÃ©bastien",
    "url": "https://github.com/belgattitude"
  },
  "keywords": [
    "request validator",
    "getServerSideProps",
    "Nextjs api routes",
    "zod"
  ],
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "module": "./dist/esm/index.js",
      "default": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "package.json",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf --no-glob ./dist ./coverage ./tsconfig.tsbuildinfo",
    "build-doc": "run-s build-typedoc",
    "build-typedoc": "rimraf --no-glob ./docs/api && typedoc --plugin typedoc-plugin-markdown --out ./docs/api",
    "prettier-check": "yarn run --top-level prettier --check --config ../../.prettierrc.js --ignore-path ../../.prettierignore \"./**/*.{js,jsx,cjs,mjs,ts,tsx,mts,md,mdx,json,css,scss,less}\"",
    "prettier-fix": "yarn run --top-level prettier --write --config ../../.prettierrc.js --ignore-path ../../.prettierignore \"./**/*.{js,jsx,cjs,mjs,ts,tsx,mts,md,mdx,json,css,scss,less}\"",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs,.cjs,.mts,.cts --cache --cache-location ../../.cache/eslint/parse-request.eslintcache",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "check-dist": "es-check -v",
    "test": "vitest run",
    "test-unit": "vitest run",
    "test-unit-watch": "vitest --ui",
    "test-unit-jest": "jest",
    "fix-all-files": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs,.cjs,.mts,.cts --fix"
  },
  "dependencies": {
    "zod": "^3.19.1"
  },
  "peerDependencies": {
    "@types/node": "*",
    "next": "^11.0.0 || ^12.0.0 || ^13.0.0"
  },
  "peerDependenciesMeta": {
    "@types/node": {
      "optional": true
    }
  },
  "devDependencies": {
    "@belgattitude/eslint-config-bases": "1.10.0",
    "@belgattitude/http-exception": "1.3.4",
    "@size-limit/file": "8.1.0",
    "@size-limit/webpack": "8.1.0",
    "@size-limit/webpack-why": "8.1.0",
    "@types/jest": "29.1.2",
    "@types/node": "18.11.0",
    "@vitest/coverage-istanbul": "0.24.3",
    "@vitest/ui": "0.24.3",
    "cross-env": "7.0.3",
    "es-check": "7.0.1",
    "eslint": "8.25.0",
    "get-tsconfig": "4.2.0",
    "jest": "29.2.0",
    "next": "^12.3.1",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "rollup": "3.2.0",
    "rollup-plugin-dts": "4.2.3",
    "size-limit": "8.1.0",
    "ts-jest": "29.0.3",
    "tslib": "2.4.0",
    "tsup": "6.2.3",
    "typedoc": "0.23.16",
    "typedoc-plugin-markdown": "3.13.6",
    "typescript": "4.8.4",
    "vite": "3.1.8",
    "vite-tsconfig-paths": "3.5.1",
    "vitest": "0.24.3",
    "webpack": "5.74.0"
  },
  "engines": {
    "node": ">=14.16"
  }
}
